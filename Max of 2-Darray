#include<stdio.h>
int main()   {
    int arr[2][2]={{2,3},{4,5}};
    int max=arr[0][0];
    int i=0,j=0;
      int Idx=(i,j);
    for(int i=0;i<2;i++)     {
        for(int j=0;j<2;j++)      {
            if (max<arr[i][j])    {
                max=arr[i][j];  
                Idx=(i,j);
                  }  }   }
         printf("The maximum element of the array is %d and its index is (%d,%d)",max,Idx);
         return 0;   }
    
    